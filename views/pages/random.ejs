</head>

<body>
  <div class="container">

    <main>

      <div class="jumbotron">
        <form method="POST" action="/api/randoms">
          <h2 class="fw-bold mb-2 text-uppercase">Obtener numeros randoms sin bloquear el servidor - Fork</h2>

          <p>Bucle: </p>
          <div class="form-group">
            <input type="number" id="typeEmailX" max="500000000" name="cantBucle"
              class="form-control form-control-lg" />
          </div>

          <button class="btn btn-primary" type="submit">Generar</button>
        </form>
      </div>

    </main>

  </div>

  <script>
    document.querySelector('form').onsubmit = function () {
      this.setAttribute('action', "/api/randoms?cant=" + document.querySelector('input[name=cantBucle]').value)
    }
  </script>
</body>

</html>

